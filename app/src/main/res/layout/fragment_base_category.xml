<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:id="@+id/nestedScrollBaseCategory">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvOfferProducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"/>
        <ProgressBar
            android:id="@+id/offerProductProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@id/rvOfferProducts"
            app:layout_constraintStart_toStartOf="@id/rvOfferProducts"
            app:layout_constraintEnd_toEndOf="@id/rvOfferProducts"
            app:layout_constraintBottom_toBottomOf="@id/rvOfferProducts"
            android:indeterminateTint="@color/g_gray700"/>
        <TextView
            android:id="@+id/tvBestProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/poppins_thin"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:text="Best Products"
            app:layout_constraintStart_toStartOf="@id/rvOfferProducts"
            app:layout_constraintTop_toBottomOf="@id/rvOfferProducts"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvBestProduct"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvBestProduct"
            android:layout_marginEnd="15dp"
            android:overScrollMode="never"/>
        <ProgressBar
            android:id="@+id/BestProductsProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@id/rvBestProduct"
            app:layout_constraintStart_toStartOf="@id/rvBestProduct"
            app:layout_constraintEnd_toEndOf="@id/rvBestProduct"
            app:layout_constraintBottom_toBottomOf="@id/rvBestProduct"
            android:indeterminateTint="@color/g_gray700"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>